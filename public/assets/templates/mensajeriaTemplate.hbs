        {{#each mensajes}}
        <div class="mensajeria">
            <p>{{ this.msj }}</p>
            <p>{{ this.createDate }}</p>
        </div>
        {{/each}}
    {{/if}}
</div>



<style>
    .titulo {
        text-align: center;
    }
    .Mensajeria {
        display: flex ;
